{% extends 'layout.njk' %}{% block content %}
<div class="container mt100">
    <h1 class="center">{{title|capitalize}}</h1>
	  <div class="row">
		<div class="col s12 m6">
		  <h3>{{title|capitalize}} Items</h3>
		  <form role="form" way-data="playList" way-persistent>
			
			<div class="form-group" way-repeat="playList">
			  <div>
				<div class="item-entry">
				  <h5>Item</h5>
				  <label>Title</label>
				  <input type="text" class="form-control" placeholder="title"  way-data="title" way-persistent>
				  <label>File</label>
				  <input type="text" class="form-control" placeholder="file"  way-data="file" way-persistent>
				</div>
				<a href="#" way-action-remove="playList.$$key" way-persistent>Remove</a>
			  </div>
			</div>
			
			<div class="form-group">
				<button class="btn btn-default {{config.theme.main}}" way-action-push="playList">Add item</button>
			</div>
			
		  </form>
		</div>
		{% include 'includes/output.njk' %}
</div>



</div>
{% endblock %}
{%block scripts%}
<script>
    way.set("playList", {{data.playList|dump|safe}});
</script>
{% endblock %}
